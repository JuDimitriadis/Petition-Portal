<main>
    <h1>My Karen Account</h1>
    <div class="myAccount">
        {{#if edit}}
            <form method="post" class="fields">
                <label for="firstName">First name:</label>
                <input
                    type="text"
                    name="firstName"
                    value="{{data.first_name}}"
                    required
                />
                <label for="lastName">Last name:</label>
                <input
                    type="text"
                    name="lastName"
                    value="{{data.last_name}}"
                    required
                />
                <label for="eMail">E-mail:</label>
                <input
                    type="email"
                    name="eMail"
                    value="{{data.email}}"
                    required
                />
                <label for="age">Age:</label>
                <input type="number" name="age" value="{{data.age}}" />
                <label for="city">City:</label>
                <input type="text" name="city" value="{{data.city}}" />
                <label for="homepage">Homepage:</label>
                <input type="text" name="homepage" value="{{data.homepage}}" />
                <label for="managers">How many times have you asked to talk to
                    the manager in the past month?</label>
                <input
                    type="number"
                    id="managers"
                    name="managers"
                    value="{{data.managers}}"
                />
                {{#if error}}
                    <p class="error">{{error}}</p>
                {{/if}}
                <button type="submit" value="update">Update</button>
            </form>
        {{else}}
            <form method="post" class="fields">
                <div>
                    <h4 class="fieldName">First Name:</h4>
                    <h5 class="fieldValue">{{data.first_name}}</h5>
                    <h4 class="fieldName">Last Name:</h4>
                    <h5 class="fieldValue">{{data.last_name}}</h5>
                    <h4 class="fieldName">E-mail:</h4>
                    <h5 class="fieldValue">{{data.email}}</h5>
                    <h4 class="fieldName">Age:</h4>
                    <h5 class="fieldValue">{{data.age}}</h5>
                    <h4 class="fieldName">City:</h4>
                    <h5 class="fieldValue">{{data.city}}</h5>
                    <h4 class="fieldName">Homepage:</h4>
                    <h5 class="fieldValue">{{data.homepage}}</h5>
                    <h4 class="fieldName">How many times have you asked to talk
                        to the manager in the past month?</h4>
                    <h5 class="fieldValue">{{data.managers}}</h5>
                    {{#if error}}
                        <p class="error">{{error}}</p>
                    {{/if}}
                    <input type="hidden" name="edit" value="true" />
                    <button type="submit" value="edit">Edit</button>
                </div>
            </form>
        {{/if}}
        {{#if editPassword}}
            <form method="post" class="changePassword">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required />
                {{#if passwordMsg}}
                    <p class="error">{{passwordMsg}}</p>
                {{/if}}
                <button type="submit" value="updatePassword">Update Password</button>
            </form>
        {{else}}
            <form method="post" class="changePassword">
                <input type="hidden" name="editPassword" value="true" />
                {{#if passwordMsg}}
                    <p class="error">{{passwordMsg}}</p>
                {{/if}}
                <button type="submit" id="editPassword" value="edit">Change
                    Password
                </button>
            </form>
        {{/if}}
    </div>
</main>